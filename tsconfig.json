{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true, // enables all strict type checks
    "noEmit": true, // prevent generating output files
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // "bundler" can cause module resolution issues
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // recommended for Next.js 13+
    "incremental": true,
    "noUnusedLocals": true, // catch unused variables
    "noUnusedParameters": true, // catch unused function params
    "forceConsistentCasingInFileNames": true, // consistent imports
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
